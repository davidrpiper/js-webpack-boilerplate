{
    "name": "js-webpack-bootstrap",
    "version": "0.1.0",
    "description": "Boilerplate configuration and repository structure for a Web Frontend JS project using Webpack",
    "author": "David Piper",
    "license": "UNLICENSED",
    "main": "index.js",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git@github.com:davidrpiper/js-webpack-bootstrap.git"
    },
    "scripts": {
        "clean": "rm -rf dist",
        "clean:all": "npm run clean node_modules",
        "build": "npm run build:prod",
        "build:dev": "webpack --mode development",
        "build:prod": "webpack --mode production",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "start": "npm run start:dev",
        "start:dev": "webpack-dev-server --mode development",
        "start:prod": "webpack-dev-server --mode production",
        "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
        "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\" \"src/*.{js,jsx,ts,tsx}\"",
        "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
        "type-check": "tsc --noEmit",
        "stats": "webpack --profile --json > .bundle-stats.json",
        "analyze:bundle": "npm run stats; webpack-bundle-analyzer .bundle-stats.json"
    },
    "devDependencies": {
        "@babel/cli": "^7.24.7",
        "@babel/core": "^7.24.7",
        "@babel/preset-env": "^7.24.7",
        "@babel/preset-react": "^7.24.7",
        "@eslint/js": "^9.28.0",
        "@types/jest": "^29.5.14",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^8.33.1",
        "@typescript-eslint/parser": "^8.33.1",
        "babel-loader": "^9.1.3",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "favicons": "^7.2.0",
        "favicons-webpack-plugin": "^6.0.1",
        "html-webpack-plugin": "^5.6.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^30.0.0-beta.3",
        "prettier": "^3.5.3",
        "ts-jest": "^29.3.4",
        "ts-loader": "^9.5.1",
        "typescript": "^5.5.3",
        "webpack": "^5.92.1",
        "webpack-bundle-analyzer": "^4.10.2",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.4"
    },
    "dependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    }
}
